@model LoginDto
@{
    ViewData["ActiveNav"] = "Login";
}


<form asp-controller="Authentication" asp-action="Login" method="post" class="row justify-content-center mt-5" style="text-align:center;">
    <div class="col-9">
        <div class="row justify-content-center">
            <label class="col-2 fw-5 text-start col-form-label" asp-for="UserName">UserName</label>
            <div class="col-5">
                <input class="form-control" asp-for="UserName" />
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <label class="col-2 fw-5 text-start form-label" asp-for="Password"></label>
            <div class="col-5">
                <input class="form-control" asp-for="Password"/>
            </div>
        </div>
        <div class="row justify-content-center mt-5">
            <div class="col-2">
            </div>
            <div class="col-5">
                <button class="col-2 form-control fw-bold m-auto w-50" type="submit">Login</button>
            </div>
        </div>
    </div>
</form>
