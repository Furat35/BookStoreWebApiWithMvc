<table id="users" class="table table-hover" style="width:100%">
    <thead>
        <tr>
            <th scope="col">User Name</th>
            <th scope="col">Email</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td class="col p-0">
                    <a asp-controller="User" asp-action="Update" asp-route-id="@user.Id" title="Update" class="text-center d-inline-block text-warning" style="width:90px;height:40px;">
                        <i class="bi bi-arrow-up"></i>
                    </a>
                </td>
                <td class="col p-0">
                    <a asp-controller="User" asp-action="SafeDelete" asp-route-id="@user.Id" title="Delete" class="text-center d-inline-block text-danger" style="width:90px;height:40px;">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="~/Areas/Admin/Views/Shared/Partials/_Pagination.cshtml" />
