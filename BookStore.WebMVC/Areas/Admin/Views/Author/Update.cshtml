@model WebApi.Core.Models.Author.AuthorUpdateDto
@{
    ViewData["ActiveNav"] = "Author";
}

<form asp-controller="Author" asp-action="Update" method="post" class="row justify-content-center mt-5" style="text-align:center;">
    <div class="col-9">
        <input type="hidden" asp-for="Id" readonly />
        <div class="row justify-content-center">
            <label class="col-2 fw-5 text-start col-form-label" asp-for="FirstName">First Name</label>
            <div class="col-5">
                <input class="form-control" asp-for="FirstName" />
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <label class="col-2 fw-5 text-start form-label" asp-for="LastName">Last Name</label>
            <div class="col-5">
                <textarea class="col-5 form-control" rows="3" asp-for="LastName"></textarea>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <label class="col-2 fw-5 text-start col-form-label" asp-for="Phone">Phone</label>
            <div class="col-5">
                <input class="form-control" asp-for="Phone" />
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <label class="col-2 fw-5 text-start col-form-label" asp-for="Mail">Mail</label>
            <div class="col-5">
                <input class="form-control" asp-for="Mail" />
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <label class="col-2 fw-5 text-start col-form-label" asp-for="BirthDate">Birthday</label>
            <div class="col-5">
                <input class="form-control" asp-for="BirthDate" />
            </div>
        </div>
       
        <div class="row justify-content-center mt-5">
            <div class="col-2">
            </div>
            <div class="col-5">
                <button class="col-2 form-control fw-bold m-auto w-50" type="submit">Update</button>
            </div>
        </div>
    </div>
</form>
