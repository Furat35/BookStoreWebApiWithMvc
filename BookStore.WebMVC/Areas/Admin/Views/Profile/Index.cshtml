@model AppUserDto
@{
    //ViewData["ActiveNav"] = "Profile";
    ViewData["Profile"] = "Index";
}

<div class="row mt-5">

    <partial name="~/Areas/Admin/Views/Profile/_LeftNavbar.cshtml" />

    <div class="col-10">
        <form asp-controller="Profile" asp-action="Update" method="post" class="row" style="text-align:center;">
            <div class="col-9">
                <div class="row justify-content-center">
                    <label class="col-2 fw-5 text-start col-form-label" asp-for="UserName">User Name</label>
                    <div class="col-5">
                        <input class="form-control" asp-for="UserName" />
                    </div>
                </div>
                <div class="row justify-content-center mt-3">
                    <label class="col-2 fw-5 text-start form-label" asp-for="Email">Summary</label>
                    <div class="col-5">
                        <textarea class="col-5 form-control" rows="3" asp-for="Email"></textarea>
                    </div>
                </div>
                <div class="row justify-content-center mt-3">
                    <label class="col-2 fw-5 text-start col-form-label" asp-for="PhoneNumber">Phone Number</label>
                    <div class="col-5">
                        <input class="form-control" asp-for="PhoneNumber" />
                    </div>
                </div>
                <div class="row justify-content-center mt-5">
                    <div class="col-2">
                    </div>
                    <div class="col-5">
                        <button class="col-2 form-control fw-bold m-auto w-50" type="submit">Update</button>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

